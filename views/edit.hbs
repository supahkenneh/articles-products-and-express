{{#if showProducts}}
<form enctype="application/x-www-form-urlencoded" action="/products/{{product.id}}?_method=PUT" method="POST">
  <h1>Edit Product Information</h1>
  <h3>{{message}}</h3>
  <input type="hidden" name="_method" value="PUT" />
  <h1>Name:</h1>
  <input type="text" name="name" value="{{product.name}}">
  <h1>Price:</h1>
  <input type="text" name="price" value="{{product.price}}">
  <h1>Inventory:</h1>
  <input type="text" name="inventory" value="{{product.inventory}}">
  <input type="submit" value="Submit">
</form>
{{/if}}
{{#if showArticles}}
<form enctype="application/x-www-form-urlencoded" action="/articles/{{article.urlTitle}}?_method=PUT" method="POST">
  <h1>Edit Article Information</h1>
  <h3>{{message}}</h3>
  <input type="hidden" name="_method" value="PUT" />
  <h1>Name:</h1>
  <input type="text" name="title" value="{{title}}">
  <h1>Author:</h1>
  <input type="text" name="author" value="{{author}}">
  <h1>Content:</h1>
  <textarea name="content">{{content}}</textarea>
  <input type="submit" value="Submit">
</form>
{{/if}}