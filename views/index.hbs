{{#if showProducts}}
<h1>Products</h1>
<h3>
  {{message}}
</h3>
<ul>
  {{#each products}}
  <li>{{this.name}}</li>
  <p>Product ID: {{this.id}}</p>
  {{/each}}
</ul>
{{/if}}
{{#if showArticles}}
<h1>Articles</h1>
<h3>
  {{message}}
</h3>
<ul>
  {{#each articles}}
  <li>{{this.name}}</li>
  <p>Article Title: {{this.title}}</p>
  {{/each}}
</ul>
{{/if}}